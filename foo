92 +                      // DEBUG format: includes COM, velocity, pressure data.
93 +                      const DebugCell* debugCells =
94 +                          reinterpret_cast<const DebugCell*>(renderMsg.payload.data());
95 +                      for (size_t i = 0; i < numCells; ++i) {
96 +                          auto unpacked = RenderMessageUtils::unpackDebugCell(debugCells[i]);
97 +                          worldData.cells[i].material_type = unpacked.material_type;
98 +                          worldData.cells[i].fill_ratio = unpacked.fill_ratio;
