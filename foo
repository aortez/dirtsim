100 +                          worldData.cells[i].velocity = unpacked.velocity;
101 +                          worldData.cells[i].pressure = unpacked.pressure_hydro;
102 +                          worldData.cells[i].pressure_gradient = unpacked.pressure_gradient;
103 +                      }
104 +                  }
105 +                  else {
106 +                      // BASIC format: material + fill only.
107 +                      const BasicCell* basicCells =
108 +                          reinterpret_cast<const BasicCell*>(renderMsg.payload.data());
109 +                      for (size_t i = 0; i < numCells; ++i) {
110 +                          MaterialType material;
111 +                          double fill_ratio;
